<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  
    android:background="#D5EEEB" 
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="10sp"
                android:gravity="center_horizontal"
                android:text="CHECKOUT"
                android:textColor="#328AA0"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:background="#54A4BD"
                android:gravity="center_horizontal"
                android:padding="5sp"
                android:text="Shipping info"
                android:textColor="#99fEfEfE"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edShippingName"
                android:layout_width="fill_parent"
                android:layout_height="35sp"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:background="@drawable/edittext"
                android:gravity="center_vertical"
                android:hint="Receiver"
                android:inputType="textPersonName"
                android:padding="6sp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/edShippingPhone"
                android:layout_width="fill_parent"
                android:layout_height="35sp"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:background="@drawable/edittext"
                android:gravity="center_vertical"
                android:hint="Phone"
                android:inputType="phone"
                android:padding="6sp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/edShippingAddre"
                android:layout_width="fill_parent"
                android:layout_height="70sp"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:background="@drawable/edittext"
                android:gravity="center_vertical"
                android:hint="Address"
                android:inputType="textMultiLine"
                android:padding="6sp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/edNote"
                android:layout_width="fill_parent"
                android:layout_height="70sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:background="@drawable/edittext"
                android:gravity="center_vertical"
                android:hint="Addition information"
                android:inputType="textMultiLine"
                android:padding="6sp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btnPlaceOrder"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="15sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="15sp"
                android:layout_weight="1"
                android:background="@drawable/nice_button"
                android:gravity="center"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="Send Order"
                android:textStyle="bold" 
                android:textColor="#fff"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>