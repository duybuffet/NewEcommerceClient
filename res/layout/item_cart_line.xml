<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/deleteCartItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/cart_book_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/deleteCartItem"
        android:text="Kelloggs Corn Flakes Honey"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/cart_book_price_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cart_book_title"
        android:layout_below="@+id/cart_book_title"
        android:layout_marginTop="15dp"
        android:text="Price: "
        android:textSize="14dp" 
        android:textColor="#757575"/>

    <TextView
        android:id="@+id/cart_book_price_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cart_book_price_title"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/cart_book_price_title"
        android:text=""
        android:textSize="14dp" 
        android:textColor="#757575"/>

    <TextView
        android:id="@+id/cart_book_price_discount_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cart_book_title"
        android:layout_below="@+id/cart_book_price_title"
        android:layout_marginTop="5dp"
        android:text="Dis:  "
        android:textSize="14dp" 
        android:textColor="#757575"/>

    <TextView
        android:id="@+id/cart_book_price_discount_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cart_book_price_val"
        android:layout_below="@+id/cart_book_price_val"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:text=""
        android:textSize="14dp" 
        android:textColor="#757575"/>

    <View
        android:id="@+id/view1"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cart_item_savings"
        android:layout_below="@+id/cart_book_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/cart_book_price_val"
        android:background="#E6E6E6" />
 
    <TextView
        android:id="@+id/qty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/view1"
        android:layout_below="@+id/cart_book_title"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="Qty"
        android:textSize="14dp" 
        android:textColor="#757575"/>
    
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@+id/qty_text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/view1"/>
    
    <View
        android:id="@+id/view2"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cart_item_savings"
        android:layout_below="@+id/cart_book_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/spinner1"
        android:background="#E6E6E6" />
    
    <TextView
        android:id="@+id/cart_item_multiplication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cart_book_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/view2"
        android:text="Rs 80000"
        android:textColor="#191919"
        android:textSize="20dp" />
 
    <View
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignRight="@+id/cart_item_savings_value"
        android:layout_below="@+id/cart_item_multiplication"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/view2"
        android:background="#E6E6E6" />
    
    <TextView
        android:id="@+id/cart_item_savings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/view2"
        android:text="Savings: "
        android:textColor="#5E5E5E"
        android:textSize="14dp" />
 
    <TextView
        android:id="@+id/cart_item_savings_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view3"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/cart_item_savings"
        android:text="20000 "
        android:textColor="#5E5E5E"
        android:textSize="14dp" />
        
	<View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view1"
        android:layout_marginTop="5dp"
        android:background="#E6E6E6" />

</RelativeLayout>

